<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">

	<!-- 
		Enabling Remote view of the logs 
		http://logback.qos.ch/manual/jmxConfig.html
		http://logback.qos.ch/manual/receivers.html 
	-->

	<contextName>Atlas Gateway</contextName> <!-- Append to <pattern> %contextName -->
	<property name="LOG_LOCATION" value="logs" /> <!-- -DLOG_LOCATION="/home/kasnot" Set when running the jar the location --> 
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
	
	<timestamp key="byDate" datePattern="yyyyMMdd"/>
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_LOCATION}/atlas-ble-localization.log</file>
	
	    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_LOCATION}/atlas-ble-localization.%i.log</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>3</maxIndex>
	    </rollingPolicy>
	
	    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>100MB</maxFileSize>
	    </triggeringPolicy>
	    <encoder>
      		<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
      		<outputPatternAsHeader>true</outputPatternAsHeader>
    	</encoder>
  	</appender>
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- Package level show -->
	<logger name="org.atlas.apps.localization" level="INFO">
		<appender-ref ref="FILE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>